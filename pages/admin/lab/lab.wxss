/* pages/admin/lab/lab.wxss */

view.container {
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 15%;
  justify-content: center;
  align-items: center;
}
text.head {
  margin-bottom: 30rpx;
}
view.find {
  width: 100%;
  margin-bottom: 40rpx;
}
form {
  display: flex;
  width: 100%;
  justify-content: center;
}
view.find input {
  display: inline-flex;
  background-color: white;
  width: 60%;
  padding: 0;
  margin-right: 5%;
  border-radius:5rpx;
}
view.find button {
  display: inline-flex;
  width: 15%;
  padding: 0;
  margin-right: 2%;
}
scroll-view {
  width: 80%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.item {
  width: 95%;
  background-color: rgb(87, 233, 172);
  margin-bottom: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #888;
}
view.sub {
  display: inline-flex;
  width: 100%;
}
view.sub button {
  width: 30%;
  padding: 0;
}
text.pre {
  width: 25%;
  text-align: right;
  margin-right: 2%;
}
